{
    "scrollview" : {

        "plugins" : {
            "scrollview-base" : {
                "requires" : [
                    "widget",
                    "event-gestures",
                    "event-mousewheel",
                    "transition"
                ],
                "***BEGIN_WF2_CHANGE***": "Justification: In order to avoid extra HTTP for panel on mobile request, change needs to be done here because there is no other way",
                "condition": {
                    "trigger": "wf2-panel",
                    "test": "wf2-panel-scrollview-test.js"
                },
                "before": ["wf2-panel"],
                "***END_WF2_CHANGE***": "",

                "skinnable": true
            },
            "scrollview-base-ie": {
                "requires": [
                    "scrollview-base"
                ],
                "condition": {
                   "trigger": "scrollview-base",
                   "ua": "ie"
                }
            },
            "scrollview-scrollbars" : {
                "requires" : [
                    "classnamemanager",
                    "transition",
                    "plugin"
                ],
                "skinnable" : true
            },
            "scrollview-paginator" : {
                "requires" : [
                    "plugin",
                    "classnamemanager"
                ]
            },
            "scrollview-list" : {
                "requires" : [
                    "plugin",
                    "classnamemanager"
                ],

                "skinnable" : true
            }

        },
        "requires" : [
            "scrollview-base",
            "scrollview-scrollbars"
        ]
    }
}
